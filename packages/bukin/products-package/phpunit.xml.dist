<?xml version="1.0" encoding="UTF-8"?>
<phpunit
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        bootstrap="../../../vendor/autoload.php"
        backupGlobals="false"
        backupStaticAttributes="false"
        colors="true"
        verbose="true"
        convertErrorsToExceptions="true"
        convertNoticesToExceptions="true"
        convertWarningsToExceptions="true"
        processIsolation="false"
        stopOnFailure="false"
        xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.5/phpunit.xsd"
>
    <coverage processUncoveredFiles="true">
        <include>
            <directory suffix=".php">entities/products/src</directory>
            <directory suffix=".php">entities/vendors/src</directory>
        </include>
    </coverage>
    <testsuites>
        <testsuite name="Products">
            <directory suffix="Test.php">./entities/products/tests/src/Feature/JsonApi</directory>
            <directory suffix="Test.php">./entities/products/tests/src/Unit</directory>
        </testsuite>
        <testsuite name="Vendors">
            <directory suffix="Test.php">./entities/vendors/tests/src/Feature/JsonApi</directory>
            <directory suffix="Test.php">./entities/vendors/tests/src/Unit</directory>
        </testsuite>
    </testsuites>
</phpunit>
